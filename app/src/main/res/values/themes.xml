<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Draftt" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_500</item>
        <item name="colorPrimaryVariant">@color/orange_300</item>
        <item name="colorOnPrimary">@color/greyblue_100</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Setting global font -->
        <item name="fontFamily">@font/open_sans</item>
        <!-- Setting global input style -->
        <item name="textInputStyle">@style/Style.Widget.Draftt.InputLayout</item>
        <!-- Setting global button style -->
        <item name="materialButtonStyle">@style/Style.Widget.Draftt.Button</item>
    </style>
</resources>