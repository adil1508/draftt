<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="onboarding_slide1_text_style" parent="onboarding_slide_base_style">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="onboarding_slide2_text_style" parent="onboarding_slide_base_style">
        <item name="android:textColor">@color/black_75</item>
    </style>

    <style name="onboarding_slide_base_style">
        <item name="android:layout_marginBottom">@dimen/onboarding_slide_text_bottom_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/onboarding_slide_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Style.Widget.Draftt.Button.Onboarding">
        <item name="android:layout_marginBottom">80dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="login_login_label">
        <item name="android:textColor">@color/orange_500</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="login_sublabel">
        <item name="android:textColor">#CC384C51</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="forget_password_email_edittext">
        <item name="android:layout_marginHorizontal">36dp</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="account_verification_code_edittext">
        <item name="android:layout_marginHorizontal">36dp</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="team_name_edittext">
        <item name="android:layout_marginHorizontal">36dp</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>


    <style name="login_forgot_password">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Style.Widget.Draftt.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/orange_500</item>
        <item name="cornerRadius">5dp</item>
        <item name="android:paddingVertical">12dp</item>
    </style>

    <style name="Style.Widget.Draftt.Button.AuthButton">
        <item name="android:layout_marginHorizontal">36dp</item>
    </style>

    <style name="Style.Widget.Draftt.Button.Signup" parent="Style.Widget.Draftt.Button.AuthButton">
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="login_signup">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="signup_login_text">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="forget_password_title">
        <item name="android:layout_marginHorizontal">36dp</item>
        <item name="android:textColor">@color/orange_500</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="account_verification_title">
        <item name="android:layout_marginHorizontal">36dp</item>
        <item name="android:textColor">@color/orange_500</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="team_name_title">
        <item name="android:layout_marginHorizontal">36dp</item>
        <item name="android:textColor">@color/orange_500</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="forget_password_subtitle">
        <item name="android:layout_marginHorizontal">36dp</item>
        <item name="android:textColor">@color/greyblue_600</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="account_verification_subtitle">
        <item name="android:layout_marginHorizontal">36dp</item>
        <item name="android:textColor">@color/greyblue_600</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="team_name_subtitle">
        <item name="android:layout_marginHorizontal">36dp</item>
        <item name="android:textColor">@color/greyblue_600</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="forget_password_imageview_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="account_verification_imageview_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="team_name_imageview_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="login_inner_constraint_layout">
        <item name="android:layout_marginHorizontal">36dp</item>
    </style>

    <style name="Style.Widget.Draftt.InputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="errorTextColor">@color/red_disaprove</item>
        <item name="boxStrokeErrorColor">@color/red_disaprove</item>
    </style>

    <style name="Style.Widget.Draftt.InputLayout.Login" parent="Style.Widget.Draftt.InputLayout">
        <item name="android:layout_marginHorizontal">36dp</item>
    </style>

    <style name="Style.Widget.Draftt.InputLayout.Signup" parent="Style.Widget.Draftt.InputLayout">
        <item name="android:layout_marginHorizontal">36dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="signup_inner_constraint_layout">
        <item name="android:layout_marginHorizontal">36dp</item>
    </style>

</resources>