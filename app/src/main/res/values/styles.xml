<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="onboarding_slide1_text_style" parent="onboarding_slide_base_style">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="onboarding_slide2_text_style" parent="onboarding_slide_base_style">
        <item name="android:textColor">@color/black_75</item>
    </style>

    <style name="onboarding_slide_base_style">
        <item name="android:layout_marginBottom">@dimen/onboarding_slide_text_bottom_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/onboarding_slide_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="onbaording_slide3_button_style" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_marginBottom">80dp</item>
        <item name="android:backgroundTint">@color/orange_500</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="login_inner_contraint_layout">
        <item name="android:layout_marginHorizontal">36dp</item>
        <item name="android:layout_marginTop">88dp</item>
    </style>

    <style name="login_login_label">
        <item name="android:textColor">@color/orange_500</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="login_sublabel">
        <item name="android:textColor">#CC384C51</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="login_email_edittext">
        <item name="android:layout_marginHorizontal">36dp</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="login_password_edittext">
        <item name="android:layout_marginHorizontal">36dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="login_forgot_password">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="login_login_button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_marginHorizontal">36dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:backgroundTint">@color/orange_500</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="login_signup">
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>